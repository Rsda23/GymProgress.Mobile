<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymProgress.Mobile.CreateSeancePage">
    <VerticalStackLayout>
        <Button 
            Grid.Column="0" 
            Text="{Binding ButtonAddExerciceText}" 
            Command="{Binding ButtonAddExerciceCommand}"
            WidthRequest="100" 
            HeightRequest="40" 
            HorizontalOptions="End" 
            Margin="0, 0, 20, 20" />

        <Grid IsVisible="{Binding First}">
            <VerticalStackLayout Spacing="10" Margin="20">
                <Label 
                    Text="Nom de la sÃ©ance" 
                    Margin="5, 0, 0, 0"/>
                <Frame Padding="10">
                    <Grid ColumnDefinitions="*,Auto">
                        <Entry Text="{Binding NameSeanceText}"/>
                    </Grid>
                </Frame>
                <Button 
                    Text="Suivant"  
                    Command="{Binding ButtonNextCommand}"
                    FontAttributes="Bold" 
                    HeightRequest="45" 
                    FontSize="18"/>
            </VerticalStackLayout>
        </Grid>

        <CollectionView ItemsSource="{Binding Exercices}" IsVisible="{Binding Second}" >
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <HorizontalStackLayout Margin="20, 5, 0, 0">
                            <CheckBox IsChecked="{Binding IsSelected}"/>
                            <Label 
                                Text="{Binding Nom}" 
                                FontSize="16" 
                                Margin="0,10,0,0"/>
                        </HorizontalStackLayout>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Grid IsVisible="{Binding Second}">
            <VerticalStackLayout>
                <Button 
                    Text="{Binding ButtonValideText}"  
                    Command="{Binding ButtonValideCommand}"
                    FontAttributes="Bold" 
                    HeightRequest="45" 
                    FontSize="18"
                    Margin="20"/>
            </VerticalStackLayout>
        </Grid>
    </VerticalStackLayout>
</ContentPage>
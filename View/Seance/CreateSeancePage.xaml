<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymProgress.Mobile.CreateSeancePage">
    <VerticalStackLayout>
        <Grid>
            <VerticalStackLayout Spacing="10" 
                                 Margin="20">
                <Label Text="Nom de la sÃ©ance" 
                       Margin="5, 0, 0, 0"/>
                
                <Frame Padding="10">
                    <Grid ColumnDefinitions="*,Auto">
                        <Entry Text="{Binding NameSeanceText}"/>
                    </Grid>
                </Frame>

                <Label Text="{Binding ErrorSeanceText}" 
                       TextColor="Red" 
                       FontSize="14" 
                       IsVisible="{Binding ErrorSeance}" 
                       Margin="0, 0, 0, 15" 
                       HorizontalTextAlignment="Center" />

                <Button Text="Confirmer"  
                        Command="{Binding ButtonValideCommand}"
                        FontAttributes="Bold" 
                        HeightRequest="45" 
                        FontSize="18"/>
            </VerticalStackLayout>
        </Grid>
    </VerticalStackLayout>
</ContentPage>
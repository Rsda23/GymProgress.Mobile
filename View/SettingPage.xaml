<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymProgress.Mobile.SettingPage"
             Title="SettingPage">
    <VerticalStackLayout >
        <Grid ColumnDefinitions="*, Auto" 
              Margin="20, 0, 20, 0" 
              VerticalOptions="Center">
            <Label Grid.Column="0" 
                   Text="{Binding TitleSetting}" 
                   HorizontalOptions="Center" 
                   FontSize="15" 
                   FontAttributes="Bold" 
                   Padding="20"  />
            
            <Grid Grid.Column="1" 
                  Margin="0, 10, 0, 0">
                <Label Text="Theme" 
                       FontAttributes="Bold" 
                       FontSize="14" 
                       HorizontalTextAlignment="Center" />
                
                <Switch VerticalOptions="Center" 
                        HorizontalOptions="Center" 
                        Toggled="ThemeMode" 
                        Margin="0, 5, 0, 0" />
            </Grid>
        </Grid>

        <VerticalStackLayout Padding="20">
            <Label Text="CoordonnÃ©es" 
                   Margin="0, 0, 0, 10"/>

            <Frame Margin=" 0, 0, 0 , 20">
                <VerticalStackLayout>
                    <Label Text="Pseudo" 
                           FontAttributes="Bold" 
                           FontSize="15" 
                           HorizontalTextAlignment="Start" 
                           Margin="0"/>
                    
                    <Label Text="{Binding Pseudo}" 
                           FontSize="18" 
                           HorizontalTextAlignment="Start" 
                           Margin="0"/>
                </VerticalStackLayout>
            </Frame>
            
            <Frame>
                <VerticalStackLayout>
                    <Label Text="E-mail" 
                           FontAttributes="Bold" 
                           FontSize="15" 
                           HorizontalTextAlignment="Start" 
                           Margin="0"/>
                    
                    <Label Text="{Binding Email}" 
                           FontSize="18" 
                           HorizontalTextAlignment="Start" 
                           Margin="0"/>
                </VerticalStackLayout>
            </Frame>
            
            <Button Margin="0, 20"
                    Text="{Binding ButtonDeleteAccountText}"
                    Command="{Binding ButtonDeleteAccountCommand}"/>
            
            <Button Text="{Binding ButtonDisconnectText}"
                    Command="{Binding ButtonDisconnectCommand}"/>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>
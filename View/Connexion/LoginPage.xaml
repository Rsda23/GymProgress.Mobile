<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="GymProgress.Mobile.LoginPage"
             Shell.NavBarIsVisible="False">
    <Grid>
        <Grid RowDefinitions="1*,8*,1*">
            <Frame CornerRadius="0" 
                   Grid.Row="1"
                   VerticalOptions="CenterAndExpand"
                   Margin="40, 0">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Connexion" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"/>

                    <Frame Padding="10, 10, 30, 10">
                        <Grid ColumnDefinitions="5,*">
                            <Entry Text="{Binding Email}"  
                                   VerticalOptions="Center" 
                                   Placeholder="Email" 
                                   FontSize="11"
                                   Grid.Column="1"/>
                        </Grid>
                    </Frame>

                    <Frame Padding="10">
                        <Grid ColumnDefinitions="*,Auto">
                            <Entry Text="{Binding Password}" 
                                   VerticalOptions="Start" 
                                   Placeholder="Mot de passe" 
                                   IsPassword="{Binding IsPasswordField}" 
                                   FontSize="11" 
                                   Grid.Column="0"/>

                            <ImageButton IsVisible="{Binding EyeYes}" 
                                         Source="eye_line.png" 
                                         HeightRequest="40"
                                         WidthRequest="20" 
                                         VerticalOptions="End" 
                                         Command="{Binding PasswordVisibilityCommand}" 
                                         Grid.Column="1"/>

                            <ImageButton IsVisible="{Binding EyeNo}" 
                                         Source="eye.png" 
                                         HeightRequest="40" 
                                         WidthRequest="20" 
                                         VerticalOptions="End" 
                                         Command="{Binding PasswordVisibilityCommand}" 
                                         Grid.Column="1"/>
                        </Grid>
                    </Frame>

                    <Label Text="{Binding ErrorText}" 
                           TextColor="Red" 
                           FontSize="14" 
                           IsVisible="{Binding Error}" 
                           Margin="0, 0, 0, 5" 
                           HorizontalTextAlignment="Center" />

                    <Button Command="{Binding ButtonConnectionCommand}" 
                            Text="{Binding ButtonConnectionText}" 
                            FontAttributes="Bold" 
                            HeightRequest="45" 
                            FontSize="18"/>

                    <HorizontalStackLayout HorizontalOptions="Center">
                        <Label Text="Mot de passe oubliÃ© ?"
                               FontSize="12" 
                               FontAttributes="Bold" 
                               HorizontalTextAlignment="Center">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding GoToForgotCommand}"  />
                            </Label.GestureRecognizers>
                        </Label>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout HorizontalOptions="Center">
                        <Label Text="Vous n'avez pas de compte ?" 
                               FontSize="12" 
                               VerticalTextAlignment="Center"/>

                        <Label Text="Inscrivez-vous" 
                               FontAttributes="Bold" 
                               FontSize="13" 
                               Margin="10, 0, 0, 0">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding GoToSubscribeCommand}" />
                            </Label.GestureRecognizers>
                        </Label>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>
        </Grid>
        <ActivityIndicator IsRunning="{Binding IsRunning}" 
                           IsVisible="{Binding IsRunning}"
                           HorizontalOptions="Center" 
                           VerticalOptions="Center"
                           WidthRequest="50" 
                           HeightRequest="50"/>
    </Grid>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="GymProgress.Mobile.SeancePage">

    <VerticalStackLayout>
        <Grid>
            <Label 
                    Grid.Column="0" 
                    Text="{Binding TitleSeance}"
                    Padding="20" 
                    HorizontalOptions="Center" />
            <Button 
                    Grid.Column="1" 
                    Text="{Binding ButtonCreateSeanceText}" 
                    Command="{Binding ButtonCreateSeanceCommand}"
                    WidthRequest="100" 
                    HeightRequest="40" 
                    HorizontalOptions="End" 
                    Margin="0, 0, 20, 0" />
        </Grid>

        <CollectionView ItemsSource="{Binding Seances}" IsVisible="{Binding HasSeance}" >
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="10, 5">
                        <Label Text="{Binding Name}" FontSize="16" VerticalOptions="End"/>
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ButtonGoToSeanceCommand}"/>
                        </Frame.GestureRecognizers>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Frame Margin="10, 5">
            <Label Text="{Binding Name}" FontSize="16" VerticalOptions="End"/>
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding ButtonGoToSeanceCommand}"/>
            </Frame.GestureRecognizers>
        </Frame>

        <StackLayout IsVisible="{Binding EmptySeance}">
            <VerticalStackLayout>
                <Frame Margin="10, 5">
                    <Label Text="Pas de séance"/>
                </Frame>
            </VerticalStackLayout>
        </StackLayout>
    </VerticalStackLayout>

</ContentPage>
